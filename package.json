{
  "name": "ernte-teilen.org",
  "description": "Source code for the ernte-teilen.org website",
  "license": "AGPL-3.0",
  "scripts": {
    "dev": "gatsby develop",
    "clean": "gatsby clean",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "lint": "npx eslint src/**/*.js --fix",
    "pretty-quick": "npx pretty-quick --staged",
    "prettier": "npx prettier 'src/**/*.js' --write",
    "test": "echo no tests",
    "postinstall": "husky install"
  },
  "engines": {
    "node": "18.x"
  },
  "dependencies": {
    "autoprefixer": "10.4.14",
    "browserslist": "4.21.5",
    "carbon-components": "9.26.0",
    "carbon-components-react": "6.38.1",
    "carbon-icons": "7.0.7",
    "classnames": "2.3.2",
    "dotenv": "16.0.3",
    "gatsby": "5.10.0",
    "gatsby-image": "2.0.13",
    "gatsby-plugin-image": "3.10.0",
    "gatsby-plugin-react-helmet": "6.10.0",
    "gatsby-plugin-sass": "6.10.0",
    "gatsby-plugin-sharp": "5.10.0",
    "gatsby-source-filesystem": "5.10.0",
    "gatsby-transformer-remark": "6.10.0",
    "gatsby-transformer-sharp": "5.10.0",
    "gatsby-transformer-yaml": "5.10.0",
    "lodash": "4.17.21",
    "prop-types": "15.8.1",
    "react": "18.2.0",
    "react-burger-menu": "3.0.9",
    "react-dom": "18.2.0",
    "react-helmet": "6.1.0",
    "react-responsive-carousel": "3.2.23",
    "sass": "1.62.1",
    "typeface-noto-serif": "1.1.13",
    "typeface-roboto": "1.1.13",
    "typeface-roboto-condensed": "1.1.13"
  },
  "devDependencies": {
    "eslint": "8.40.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard": "17.0.0",
    "eslint-config-standard-jsx": "11.0.0",
    "eslint-config-standard-react": "13.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.32.2",
    "husky": "8.0.3",
    "npm-check-updates": "16.10.12",
    "postcss": "8.4.23",
    "prettier": "2.8.8",
    "pretty-quick": "3.1.3"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "build/**"
    ],
    "rules": {
      "react/prop-types": 0,
      "react/react-in-jsx-scope": 0,
      "spaced-comment": 0,
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "env": {
      "jest/globals": true,
      "browser": true
    },
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "standard-jsx",
      "standard-react",
      "prettier"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": false
  }
}
